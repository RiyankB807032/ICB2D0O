package assignment1;
import java.lang.Math;
import java.util.Scanner;
/**
 *
 * @author 807032
 */
public class Assignment1 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("In order, I will calculate the area of a rectangle, ");
        System.out.println("the area of a circle, ");
        System.out.println("surface area abd volume of a cylinder "); 
        System.out.println("The period is the time it takes for a pendulum to make one back-and-forth swing ");  
        System.out.println("The period is the time it takes for a pendulum to make one back-and-forth swing ");
        System.out.println("Enter the width");
        int recwidth =  scanner.nextInt();
        System.out.println("Enter the length");
        int reclength =  scanner.nextInt();
        System.out.println("The area is: ");
        System.out.println(recwidth * reclength);
        System.out.println("I will now compute the area of a circle, enter the radius ");
        int circlerad =  scanner.nextInt();
        System.out.println("The area of the circle is: ");
        System.out.println(Math.PI * circlerad * circlerad);
        System.out.println("I will now compute the surface area and volume of a cylinder, I will compute the volume first, enter the height. ");
        int cylinderh =  scanner.nextInt();
        System.out.println("Now enter the radius ");
        int cylinderrad =  scanner.nextInt();
        System.out.println("The volume is" + Math.PI * cylinderrad * cylinderrad * cylinderh);
        System.out.println("The surface area is " +  2 * Math.PI * cylinderrad * cylinderh + 2 * Math.PI * cylinderrad * cylinderrad);
        System.out.println("The period is the time it takes for a pendulum to make one back-and-forth swing, now enter the meters ");
        int L  =  scanner.nextInt();
        System.out.println("The time for one swing is " 2 * Math.PI * sqrt(L/9));
        
